<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

<div class="listItems">
  <div class="listitem"><a href="/home"><button class="category" type="button" name="Home">Home</button></a></div>
  <div class="listitem"><a href="/work"><button class="category" type="button" name="Work">Work</button></a></div>
  <div class="listitem"><a href="/other"><button class="category" type="button" name="Other">Other</button></a></div>

</div>

  <div class="box">


  <%  newListItems.forEach(function(item){ %>

    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
        <p><%=item.name%></p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>"></input>
    </form>
  <%  }) %>


      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
